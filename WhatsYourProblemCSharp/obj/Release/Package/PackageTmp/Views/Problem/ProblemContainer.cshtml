@{
    Layout = null;
}
@using WhatsYourProblemCSharp.Models;
@model List<Problem>
@foreach (Problem problem in Model)
{
    <div class="problem" problemid="@problem.ID" 
        @if(problem.EditedBy!=null){
            @String.Format("editingid={0}",problem.EditedBy)
        }
        >
        <div class="voteArrowsContainer"><!--
            <img class="voteUpArrow" />
            <img class="voteDownArrow" />-->
        </div>
        <div class="pTitle">@problem.Title</div>
        <div class="pOptions">
            <div>@problem.PostedDate.Value.AddHours(11).ToShortDateString()</div>
            <div>@problem.PUser.NameFirst</div>
            @if (new Guid(User.Identity.Name) == problem.PUserID)
                    {
                        <div class="deleteProblem" style="display:none;">[delete]</div>
                    }
        </div>
    </div>
}